<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tuoguan.TuoguanFragment"
    android:background="@drawable/shape_bg_gradient">\
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <SeekBar
            android:id="@+id/seekBar_t"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="10"
            android:secondaryProgress="70"/>
        <TextView
            android:id="@+id/tuoguan_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10"
            android:textSize="20sp"/>
        <com.example.education.MyElongScaleSeekBar
            android:id="@+id/double_sb2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.example.education.DoubleSeekBar
            android:id="@+id/double_sb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tuoguan_tv2"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />
        <TextView
            android:id="@+id/tuoguan_tv3"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />


    </LinearLayout>



</FrameLayout>